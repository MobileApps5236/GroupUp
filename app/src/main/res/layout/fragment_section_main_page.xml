<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tonyrobb.groupup.SectionMainPageFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/section_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Section Name"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_discussion_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:enabled="true"
            android:text="Discussion Board"
            android:textColor="@android:color/background_dark"
            android:theme="@style/AppTheme" />

        <Button
            android:id="@+id/button_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:enabled="true"
            android:text="Groups"
            android:textColor="@android:color/background_dark"
            android:theme="@style/AppTheme" />

        <Button
            android:id="@+id/button_class_roster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:enabled="true"
            android:text="Class Roster"
            android:textColor="@android:color/background_dark"
            android:theme="@style/AppTheme" />

        <Button
            android:id="@+id/button_my_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:enabled="true"
            android:text="My Group"
            android:textColor="@android:color/background_dark"
            android:theme="@style/AppTheme" />

    </LinearLayout>

</FrameLayout>
